<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('movie-background.JPG') %>);">
  <div class="container">
    <h1>Movie list</h1>
  </div>
</div>

<div class="container mt-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 400, crop: :fill %>')">
        <h2><%= list.name %></h2>
        <%= link_to 'link', list_path(list), class: "card-link" %>
      </div>
    <% end %>
  </div>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create list", class: "btn btn-warning" %>
  <% end %>
</div>
