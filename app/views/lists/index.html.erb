<div class="container">
  <h1>Movie List</h1>
</div>

<div class="container mt-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1440404653325-ab127d49abc1?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
        <h2><%= list.name %></h2>
        <%= link_to '', list_path(list), class: "card-link" %>
      </div>
    <% end %>
  </div>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.submit "add a List", class: "btn btn-warning" %>
    <%= f.input :photo, as: :file %>
  <% end %>
</div>
